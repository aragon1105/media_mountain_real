<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightsilver"
    android:paddingTop="7dp"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    android:paddingBottom="7dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        card:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="349dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    card:srcCompat="@drawable/heart"
                    android:layout_marginStart="16dp"
                    android:layout_alignTop="@+id/textLike"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/mt_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:background="@color/transparent"
                    android:text="5555"
                    android:textColor="@color/lightsilver"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_alignBaseline="@+id/textview"
                    android:layout_alignBottom="@+id/textview"
                    android:layout_toEndOf="@+id/textLike" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY" />


                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/image"
                    android:gravity="center|left"
                    android:padding="10dp"
                    android:text="산이름"
                    android:textColor="#9AFE2E"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="27.41K"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/imageView2" />


                <TextView
                    android:id="@+id/textExplain"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textview"
                    android:text="산에 대한 설명입니다. 이 산의 특성에 대해 말해주고자 합니다. 울리리리리리리아하얃즈퍼잳러ㅣㅏ"
                    android:textColor="#000000" />


            </RelativeLayout>
        </FrameLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
